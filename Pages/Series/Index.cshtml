@page
@using OpenDataShare
@using Microsoft.EntityFrameworkCore
@model LEPS.Pages.Series.IndexModel
@inject ApplicationDbContext ApplicationDbContext
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var series = ApplicationDbContext.Series.Where(s => s.IsDeleted == false);
}

<!DOCTYPE html>

<html>
<head>
    <title>Series Search</title>
</head>
<body>
<div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Pot</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var serie in series)
        {
            <tr>
                <td>
                    @serie.Name
                </td>
                <td>
                    @serie.Pot
                </td>
                <td>
                    <a href="/Series/Edit?Id=@serie.Id"><i class="fa-solid fa-pencil"></i></a>
                    |
                    <a href="/Series/Delete?Id=@serie.Id"><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>