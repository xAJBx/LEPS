@page
@model LEPS.Pages.Players.Create

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <form method="post">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Create Player</h5>
                <div>
                    <label for="name">First Name</label>
                    <input id="firstName" name="firstName"></input>
                </div>
                <div>
                    <label for="name">Last Name</label>
                    <input id="lastName" name="lastName"></input>
                </div>
                <div>
                    <label for="name">Email</label>
                    <input type="email" id="email" name="email"></input>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" asp-page-handler="CreatePlayer">Create</button>
        </div>
    </form>
</div>
</body>
</html>